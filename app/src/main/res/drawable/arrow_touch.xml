<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient android:endColor="@color/accent"
                              android:type="radial"
                              android:gradientRadius="10dp"
                              android:startColor="@color/accent_bright"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center"
                        android:src="@drawable/ic_arrow_drop_down"
                        android:tileMode="repeat"/>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@drawable/ic_arrow_drop_down" android:state_pressed="false"/>
    <item android:drawable="@drawable/ic_arrow_drop_down"/>
</selector>