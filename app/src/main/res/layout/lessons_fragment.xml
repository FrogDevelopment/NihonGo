<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lessons_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lesson_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="@string/lesson_description" />

    <TextView
        android:id="@+id/lesson_no_connection_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lesson_description"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/lesson_no_connection_test"
        android:textStyle="italic"
        android:visibility="gone" />

    <include
        layout="@android:layout/list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lesson_no_connection_test" />

</RelativeLayout>