<ScrollView
    android:id="@+id/review_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/review_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/review_reviewed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="60sp"/>

        <TextSwitcher
            android:id="@+id/review_textSwitcher_kana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="60sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp"
                android:textStyle="italic"/>

        </TextSwitcher>

        <TextSwitcher
            android:id="@+id/review_textSwitcher_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="60sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp"
                android:textStyle="italic"/>

        </TextSwitcher>

        <TextView
            android:id="@+id/review_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="@string/details_info"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/review_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/review_example_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="@string/details_example"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/review_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_tags_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_tags"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/review_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_ration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_ratio"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/review_tags_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>