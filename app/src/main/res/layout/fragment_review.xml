<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/review_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="22dp"
    android:paddingStart="22dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/bookmark"
        android:textSize="12sp"/>

    <ImageView
        android:id="@id/bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_bookmark_on"
        android:tint="@android:color/darker_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/review_success"
        android:layout_below="@id/bookmark"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_reviewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:gravity="center"
                android:textSize="60sp"/>

            <TextSwitcher
                android:id="@+id/review_textSwitcher_kana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="60sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:textStyle="italic"/>
            </TextSwitcher>

            <TextSwitcher
                android:id="@+id/review_textSwitcher_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="60sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:textStyle="italic"/>
            </TextSwitcher>

            <TextView
                android:id="@+id/review_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:text="@string/details_info"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/review_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/review_example_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:text="@string/details_example"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/review_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/review_tags_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:text="@string/details_tags"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/review_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@id/review_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/review_rating"
        android:layout_marginTop="10dp"
        android:text="@string/details_ratio"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@id/review_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rate_0"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/rate_1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/rate_2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@android:color/darker_gray"/>
    </LinearLayout>

</RelativeLayout>