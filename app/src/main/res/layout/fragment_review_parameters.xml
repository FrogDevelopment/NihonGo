<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:orientation="vertical"
              android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/review_switch_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/param_reviewed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textOff="@string/no"
                android:textOn="@string/yes"/>

            <Switch
                android:id="@+id/review_switch_learned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/param_exclude_learned"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textOff="@string/no"
                android:textOn="@string/yes"/>

            <Switch
                android:id="@+id/review_switch_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/param_only_favorite"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textOff="@string/no"
                android:textOn="@string/yes"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/review_param_sort_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/param_sort"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>

                <Spinner
                    android:id="@+id/review_param_sort_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/param_sorts"
                    android:prompt="@string/param_sort_selection"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/review_param_quantity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/param_quantity"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>

                <Spinner
                    android:id="@+id/review_param_quantity_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/param_quantities"
                    android:prompt="@string/param_quantity_selection"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/review_param_tag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/param_tag_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>

                <Spinner
                    android:id="@+id/review_param_tag_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/param_tag_selection"
                    android:spinnerMode="dialog"/>

                <TextView
                    android:layout_marginTop="-20dp"
                    android:id="@+id/review_param_tag_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Switch
        android:id="@+id/review_switch_keep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/param_keep_config"
        android:textOff="@string/no"
        android:textOn="@string/yes"/>

    <Button
        android:id="@+id/review_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:text="@string/param_button_start"/>

</LinearLayout>