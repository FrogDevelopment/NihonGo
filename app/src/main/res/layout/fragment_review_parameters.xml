<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:orientation="vertical"
              android:padding="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/review_switch_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="@string/param_reviewed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textOff="@string/no"
                android:textOn="@string/yes"/>

            <Switch
                android:id="@+id/review_switch_learned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:text="@string/param_exclude_learned"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textOff="@string/no"
                android:textOn="@string/yes"/>

            <Switch
                android:id="@+id/review_switch_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:text="@string/param_only_favorite"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textOff="@string/no"
                android:textOn="@string/yes"/>

            <LinearLayout
                android:id="@+id/review_param_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/review_param_sort_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/param_sort"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/review_param_sort_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/param_sort_selection"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="italic"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_touch"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/review_param_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/review_param_quantity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/param_quantity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/review_param_quantity_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/param_quantity_selection"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="italic"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_touch"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/review_param_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/review_param_tag_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/param_tag_title"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/review_param_tag_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/param_tag_selection"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="italic"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_touch"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Switch
        android:id="@+id/review_switch_keep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:padding="10dp"
        android:text="@string/param_keep_config"
        android:textOff="@string/no"
        android:textOn="@string/yes"/>

    <Button
        android:id="@+id/review_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:text="@string/param_button_start"/>

</LinearLayout>